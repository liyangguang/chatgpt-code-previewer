{
  "manifest_version": 3,
  "name": "ChatGPT HTML viewer",
  "description": "A simple extension to render HTML or SVG code generated by ChatGPT directly on the page.",
  "author": "liyangguangcn@gmail.com",  
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/chat/*"],
      "js": ["script-openai.js"],
      "css": ["styles.css"],
      "runAi": "document_idle"
    },
    {
      "matches": ["https://codepen.io//*"],
      "js": ["script-codepen.js"],
      "css": ["styles.css"],
      "runAi": "document_idle"
    }
  ]
}
