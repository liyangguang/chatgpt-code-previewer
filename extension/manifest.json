{
  "manifest_version": 3,
  "name": "ChatGPT Code Previewer",
  "description": "A simple extension to render HTML (with CSS and JS), SVG, and Markdown code generated by ChatGPT directly on the page.",
  "author": "liyangguangcn@gmail.com",  
  "version": "1.2.2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["marked.js", "script-shared.js", "script-openai.js"],
      "css": ["styles.css"],
      "runAi": "document_idle"
    },
    {
      "matches": ["https://chat.0x01.ai/*"],
      "js": ["marked.js", "script-shared.js", "script-chatui.js"],
      "css": ["styles.css", "styles-chatui.css"],
      "runAi": "document_idle"
    }
  ]
}
